                <th>Trainer</th>
                <tr>
                    <td>
                        <form class="" action="/Display_one" method="post">
                            <input class="text-center" type="text" name="name" value="<% if(typeof rows != 'undefined' && rows.length > 0){ %>
                                <%= rows[0].T_NAME%>
                                    <% } %>" />
                            <button>Submit</button>
                        </form>
                    </td>
                    </br>
                    <td>
                        <% if(typeof rows != 'undefined' && rows.length > 0){ %>
                            <%= rows[0].WEIGHT%>
                                <% } else{ %>
                                    weight
                                    <% } %>
                    </td>
                    </br>
                    <td>
                        <% if(typeof rows != 'undefined' && rows.length > 0){ %>
                            <%= rows[0].HEIGHT%>
                                <% } else{ %>
                                    height
                                    <% } %>
                    </td>
                    </br>
                    <td>
                        <% if(typeof rows != 'undefined' && rows.length > 0){ %>
                            <%= rows[0].FIRE%>
                                <% } else{ %>
                                    fire
                                    <% } %>
                    </td>
                    </br>
                    <td>
                        <% if(typeof rows != 'undefined' && rows.length > 0){ %>
                            <%= rows[0].WATER%>
                                <% } else{ %>
                                    water
                                    <% } %>
                    </td>
                    <td>
                        <% if(typeof rows != 'undefined' && rows.length > 0){ %>
                            <%= rows[0].FLY%>
                                <% } else{ %>
                                    fly
                                    <% } %>
                    </td>
                    <td>
                        <% if(typeof rows != 'undefined' && rows.length > 0){ %>
                            <%= rows[0].FIGHT%>
                                <% } else{ %>
                                    fight
                                    <% } %>
                    </td>
                    <td>
                        <% if(typeof rows != 'undefined' && rows.length > 0){ %>
                            <%= rows[0].ELECTRIC%>
